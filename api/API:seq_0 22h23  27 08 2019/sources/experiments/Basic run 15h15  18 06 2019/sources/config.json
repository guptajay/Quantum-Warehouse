{   
    "name" : "Basic run",
    "experiments_dir" : "experiments",
    "load_dir" : "results/models",
    "skip_dirs" : [".vscode,.git,experiments"],
    "verbose" : 0,
    "ghost" : false,
    "tensorboard":true,

    "config" : {
    
        "architecture" : "basic_seq_model",
        
        "agent":
        {
            "type" : "DQNAgent",
            "target_model_update" : 1e-2,
            "nb_steps_warmup" : 10
        },
    
        "training":
        {
            "render" : true,
            "nb_steps" : 500,
            "nb_max_episode_steps" : 1500,
            "action_repetition" : 1
        },
        
        "optimization":
        {
            "optimizer" : "Adam",
            "lr" : 1e-3  
        },
        
        "memory":
        {
            "type" : "SequentialMemory",
            "limit" : 1000
        },
        
        "policy" : "BoltzmannQPolicy",
        
        "testing":
        {
            "do" : false,
            "render" : true,
            "nb_episodes" : 5
        }
        
    }
    
}
